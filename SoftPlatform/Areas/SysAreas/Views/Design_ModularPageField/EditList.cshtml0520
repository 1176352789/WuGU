                                        //        表单元素、查询类型、位置(快速区、高级区)
                                        //    排序字段：排序号
                                        i = 3 + 3 + 1;
                                    }
                                    else if (Design_ModularOrFuns[m].PageType == 2)//编辑页面
                                    {
                                        i = 2;
                                    }
                                    else if (Design_ModularOrFuns[m].PageType == 5)//详情页面
                                    {
                                        i = 3;//位置、字段、序号
                                    }

                                    if (i > 0)
                                    {
                                    <th class="lockhead" colspan="@i">@Design_ModularOrFuns[m].ModularName</th>
                                    }
                                }
